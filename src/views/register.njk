{% extends "./base.njk" %}

{% block pageTitle %}
    Create an Account | fedIMG
{% endblock pageTitle %}

{% block body %}
<style>
    .form-register {
        display: flex;
        place-content: center;
    }
</style>
    <div class="container">

    <div class="px-4 py-5 my-5 text-center">
        <main class="form-register w-100 m-auto">
            <form enctype="multipart/form-data" action="/register" method="post" class="d-flex flex-column gap-2 w-50">
                <h1 class="h3 mb-3 fw-normal">
                    Create an Account
                </h1>
                <div class="form-floating">
                    <input type="email" required class="form-control" id="formControlEmail" placeholder="name@example.com">
                    <label for="formControlEmail">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="text" required class="form-control" id="formControlUsername" placeholder="name0123">
                    <label for="formControlUsername">Username</label>
                </div>
                <div class="form-floating">
                    <input type="password" required class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                <button class="mt-4 btn btn-primary w-100 py-2" type="submit">Submit</button>
                <p class="mt-5 mb-3 text-body-secondary">© 2023</p>
            </form>
        </main>
    </div>
</div>
{% endblock body %}<div class="container">

    <div class="px-4 py-5 my-5 text-center">
        <main class="form-signin w-100 m-auto">
            <form enctype="multipart/form-data" action="/register" class="d-flex flex-column gap-2 w-50">
                <h1 class="h3 mb-3 fw-normal">
                    Please sign in
                </h1>
                <div class="form-floating">
                    <input type="email" required class="form-control" id="formControlEmail" placeholder="name@example.com">
                    <label for="formControlEmail">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" required class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>

                <button class="mt-4 btn btn-primary w-100 py-2" type="submit">Sign in</button>
                <p class="mt-5 mb-3 text-body-secondary">© 2023</p>
            </form>
        </main>
    </div>
</div>