{% extends "./base.njk" %}

{% block pageTitle %}
Login | fedIMG
{% endblock pageTitle %}


{% block body %}
{# FIXME: move this to separate file #}
<style>
    .form-signin {
        display: flex;
        place-content: center;
    }
</style>

<div class="container">

    <div class="px-4 py-5 my-5 text-center">
        <main class="form-signin w-100 m-auto">
            <form class="d-flex flex-column gap-3 w-50" action="/auth/login" method="post">
                <h1 class="fw-bold my-2">fedIMG</h1>
                <div class="h3 mb-3 fw-normal">
                    Please sign in
                </div>
                <div class="form-floating">
                    <input type="email" name="email" autofocus class="form-control" id="floatingInput" placeholder="name@example.com" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>

                <button class="mt-4 btn btn-primary btn-lg w-100" type="submit">Sign in</button>
                <a class="mt-2 btn btn-outline-secondary btn-lg w-100" href="/auth/register">Create an account</a>
                <p class="mt-5 mb-3 text-body-secondary">Copyright Â© 2023 fedIMG. All rights reserved.</p>
            </form>
        </main>
    </div>
</div>
{% endblock body %}